<CascadingAuthenticationState>
    <Router AppAssembly="@typeof(App).Assembly" AdditionalAssemblies="new[] { typeof(BigBang1112.Razor.Temp).Assembly}">
        <Found Context="routeData">
            <AuthorizeRouteView RouteData="@routeData" DefaultLayout="typeof(MainLayout)">
                <NotAuthorized>
                    <LayoutView>
                        <StatusCode Value="401" Message="Sorry, you're not allowed to see this."></StatusCode>
                    </LayoutView>
                </NotAuthorized>
                <Authorizing>
                    <div class="section">
                        <span>Authorizing...</span>
                    </div>
                </Authorizing>
            </AuthorizeRouteView>
            <FocusOnNavigate RouteData="@routeData" Selector="h1" />
        </Found>
        <NotFound>
            <LayoutView Layout="typeof(MainLayout)">
                <StatusCode Value="404" Message="Sorry, there's nothing at this address."></StatusCode>
            </LayoutView>
        </NotFound>
    </Router>
</CascadingAuthenticationState>